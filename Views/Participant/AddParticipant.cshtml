@model Villasor_FunRun.Models.ParticipantViewModel

<div class="d-flex justify-content-center align-items-center">
    <div class="card p-4" style="width: 500px">
        <form method="post">
            <div class="row">
                <h5 class="col-12 text-center">Registration Form</h5>
                <div class="col-12 mb-1">
                    <label for="name">Name</label>
                </div>
                <div class="col-12 mb-3">
                    <input type="text" class="form-control" id="first-name" asp-for="Name" />
                </div>
                <div class="col-12 mb-1">
                    <label for="email">Email</label>
                </div>
                <div class="col-12 mb-3">
                    <input type="email" class="form-control" id="email" asp-for="Email" />
                </div>
                <div class="col-12 mb-1">
                    <label for="p-number">Phone Number</label>
                </div>
                <div class="col-12 mb-3">
                    <input type="tel" class="form-control" id="p-number" asp-for="PNumber" />
                </div>
                <div class="col-12 radio">
                    <p class="mb-1">Select distance</p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="distance" value="3" id="distance-1" asp-for="distance">
                        <label class="form-check-label" for="distance-1">3K</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="distance" value="5" id="distance-2" asp-for="distance">
                        <label class="form-check-label" for="distance-2">5K</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="distance" value="10" id="distance-3" asp-for="distance">
                        <label class="form-check-label" for="distance-3">10K</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </div>
        </form>
    </div>
</div>